rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow users to create their own user document and read/update it.
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    match /serviceProviders/{providerId} {
      // Allow authenticated users to create their own service provider document.
      allow create: if request.auth != null && request.auth.uid == providerId;
      // Public read access for service providers.
      allow read: if true;
    }
  }
}
