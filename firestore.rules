
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write their own data.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Service providers can be read by anyone (for the directory)
    // but only written to by the owner.
    match /serviceProviders/{providerId} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == providerId;
    }

    // Work orders can be read by the service provider they are assigned to,
    // or by the user who created them.
    // They can be created by any authenticated user.
    match /workOrders/{workOrderId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.serviceProviderId || request.auth.uid == resource.data.userId);
      allow create: if request.auth != null;
      // Allow the service provider to update the status, etc.
      allow update: if request.auth != null && request.auth.uid == resource.data.serviceProviderId;
    }

    // Make global data like countries, components, etc., readable by all.
    match /{document=**} {
        allow read: if true;
    }
  }
}
